FROM nvidia/cuda:12.8.0-cudnn-runtime-ubuntu22.04

# Set non-interactive mode for apt and install basic dependencies
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install Python 3.11 and pip, minimal system deps only
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.11-dev \
    python3.11-venv \
    python3.11-distutils \
    python3-pip \
    curl \
    ca-certificates \
    git \
    poppler-utils \
    build-essential \
    && ln -sf /usr/bin/python3.11 /usr/bin/python \
    && ln -sf /usr/bin/pip3 /usr/bin/pip \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy full app code
COPY . /app/

# Install Celery dependencies
RUN python -m pip install --upgrade pip && \
    python -m pip install --no-cache-dir -r requirements.txt

# Install study_friend as a local package
RUN python -m pip install ./study-friend

# For PYTHONPATH-based resolution
ENV PYTHONPATH=/app

# Setup an app user so the container doesn't run as the root user
RUN useradd app
USER app